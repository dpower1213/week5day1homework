{% extends 'base.html.j2' %}
{% block title %}
Pokemon Stats
{% endblock %}

{% block content %}
    <h1>Pokemon Stats</h1>
    <form action="{{url_for('pokemon')}}" method="POST">
        <div class="mb-3">
            <label for="pokemon" class="form-label">Pokemon Name</label>
            <input type="text" name = "pokemon" class="form-control" id="pokemon">
        </div>
        <div style="color:red;"><small>{{ error }}</small></div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form> 
    {% if poke %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Order</th>
                    <th scope="col">Ability</th>
                    <th scope="col">Base experience</th>
                    <th scope="col">Front Shiny</th>
                    <th scope="col">Stat 1 Name</th>
                    <th scope="col">Stat 1 Rating</th>
                    <th scope="col">Stat 2 Name</th>
                    <th scope="col">Stat 2 Rating</th>
                    <th scope="col">Stat 3 Name</th>
                    <th scope="col">Stat 3 Rating</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">{{poke.name}}</th>
                    <td>{{poke.order}}</td>
                    <td>{{poke.ability}}</td>
                    <td>{{poke.base_experience}}</td>
                    <td>{{poke.front_shiny}}</td>
                    <td>{{poke.stat_name1}}</td>
                    <td>{{poke.stat_rating1}}</td>
                    <td>{{poke.stat_name2}}</td>
                    <td>{{poke.stat_rating2}}</td>
                    <td>{{poke.stat_name3}}</td>
                    <td>{{poke.stat_rating3}}</td>
                    
                </tr>
            </tbody>
        </table>
    {% endif %}


{% endblock %}
